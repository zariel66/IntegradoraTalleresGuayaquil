<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.karen.tallerguayaquil.Principal"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_weight="0.57"
        android:gravity="center"
        android:onClick="iniciar"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="165dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="@string/talleres_guayaquil"
            android:textAlignment="center"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="42sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="380dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/img_btntaller"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/registrar_taller"
                android:onClick="registrotaller"
                app:srcCompat="@drawable/mecanico"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="141dp" />

            <ImageButton
                android:id="@+id/img_btncliente"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/registrar_usuario"
                android:onClick="registropersona"
                app:srcCompat="@drawable/reparacion"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="275dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="0.44"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.86"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="@string/registra_tu_negocio"
                android:textAlignment="center"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="383dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.93"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="@string/encuentra_un_taller"
                android:textAlignment="center"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="205dp"
                tools:layout_editor_absoluteY="383dp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.38"
                android:gravity="center_horizontal|center"
                android:text="Ã“"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button2"
                android:layout_width="329dp"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_dark"
                android:gravity="center_horizontal|center"
                android:onClick="credencial"
                android:text="@string/iniciar_sesi_n"
                android:textColor="@android:color/background_light" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
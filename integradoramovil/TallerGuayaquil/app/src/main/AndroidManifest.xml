<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.karen.tallerguayaquil">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.FullScreen">

        <activity
            android:name=".activities.ActionActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Sign up Person -->
        <activity
            android:name=".activities.SignupPersonActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.SignupVehicleActivity"
            android:screenOrientation="portrait"/>

        <!-- Sign up WorkShop -->
        <activity
            android:name=".activities.SignupServiceActivity"
            android:screenOrientation="portrait"/>

        <!-- Login -->
        <activity
            android:name=".activities.LoginActivity"
            android:screenOrientation="portrait"/>

        <!-- Main -->
        <activity
            android:name=".activities.ReservationActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.MapActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.WorkShopProfileActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.ScannerActivity"
            android:clearTaskOnLaunch="true"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".activities.CompleteActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.RecordActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>

        <!-- Meta -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_android_map_api_key" />

        <uses-feature
            android:glEsVersion="0x00020000"
            android:required="true" />

    </application>

</manifest>